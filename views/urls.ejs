<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>My URLs</title>
</head>
<body>
  <!-- Bootstrap JS -->
  <script
  src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
  integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
  crossorigin="anonymous"
></script>
  <% if (user) { %>
    <h1>Welcome <%= user.email %></h1>
    <h2>My URLs:</h2>
    <ul>
      <% Object.keys(urls).forEach(shortURL => { %>
        <li>
          <p>Short URL: <a href="/u/<%= urls[shortURL].shortURL %>"><%= urls[shortURL].shortURL %></a></p>
          <p>Long URL: <%= urls[shortURL].longURL %></p>
          <form action="/urls/<%= urls[shortURL].shortURL %>/delete" method="POST">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }); %>
    </ul>
  <% } else { %>
    <h1>Please log in to view your URLs.</h1>
    <a href="/login">Login</a>
  <% } %>
</body>
</html>

