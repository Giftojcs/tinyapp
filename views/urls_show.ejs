<html>
<head>
  <title><%= urls[shortURL].longURL %></title>
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-md navbar-dark bg-success">
      <a class="navbar-brand" href="/urls">TinyApp</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </div>
      </div>
    </nav>
    <form action="/logout" method="POST" class="form-inline">
      <% if (user) { %>
        <span class="logged-in-user">Logged in as: <%= user.email %></span>
        <button type="submit" class="btn btn-link">Logout</button>
      <% } else { %>
        <input type="text" name="username" class="form-control mr-sm-2" placeholder="Username" required>
        <button type="submit" class="btn btn-outline-light">Login</button>
      <% } %>
    </form>
  </header>
  <h1><%= urls[shortURL].longURL %></h1>
  <p>Short URL: <a href="/u/<%= shortURL %>"><%= urls[shortURL].shortURL %></a></p>
  <p>Long URL: <%= urls[shortURL].longURL %></p>
  <form action="/urls/<%= shortURL %>?_method=DELETE" method="POST">
    <button type="submit" class="btn btn-danger">Delete</button>
  </form>
</body>
</html>

