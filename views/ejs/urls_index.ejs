<%- include('layout', { loggedIn: true, user: currentUser }) %>

<h1>My URLs</h1>

<% if (urls.length > 0) { %>
  <table>
    <thead>
      <tr>
        <th>Short URL</th>
        <th>Long URL</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% urls.forEach((url) => { %>
        <tr>
          <td><a href="/u/<%= url.shortURL %>"><%= url.shortURL %></a></td>
          <td><%= url.longURL %></td>
          <td>
            <form method="GET" action="/urls/<%= url.id %>">
              <button type="submit">Edit</button>
            </form>
            <form method="POST" action="/urls/<%= url.id %>/delete">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <p>No URLs found.</p>
<% } %>

<a href="/urls/new">Create a New Short Link</a>

